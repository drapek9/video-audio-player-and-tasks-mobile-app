<ListScreen>:
    MDCard:
        id: cardik
        md_bg_color: 0, 0, 0, 1
        elevation: 10
        size_hint: .3, .6
        pos_hint: {"center_x": .5, "top": .95}
        ScrollView:
            MDGridLayout:
                padding: 30
                id: grid
                cols: 1
                height: self.minimum_height
                size_hint_y: None
    MDRaisedButton:
        id: button
        md_bg_color: 0, 0, 0, 1
        text: "ADD"
        pos_hint: {"center_x": .5}
        pos_hint_y: None
        top: cardik.y - 20
        text_color: 1, 1, 1, 1
        on_release: root.add()
    MDTextField:
        id: field
        pos_hint: {"center_x": .5}
        pos_hint_y: None
        top: button.y - 60
        size_hint: .3, 110/root.height
        mode: "fill"
        line_color_focus: "black"
        text_color_focus: "black"
        on_text_validate: root.add()
        color: 0, 0, 0, 0
    
    MDLabel:
        id: error_label
        #adaptive_size: True
        color: "red"
        pos_hint: {"center_x": .5}
        pos_hint_y: None
        top: field.y - 10
        size_hint: None, None
        size: 200, 50
        halign: "center"
