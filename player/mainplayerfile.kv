<PlayerScreen>:
    MDCard:
        padding: 50
        spacing: 100
        size_hint: None, None
        pos_hint: {"center_x": .5, "center_y": .5}
        size: "200dp", button.height + 40
        md_bg_color: "black"
        Button:
            id: button
            size_hint: None, None
            background_color: 1, 1, 1, 1
            on_press: root.action_press()
            on_release: root.action_release()
            pos_hint: {"center_x": .5, "center_y": .5}
            background_normal: ""
            background_down: "green"
            Image:
                id: buttons_image
                source: "app_images/pause.png"
                pos_hint_x: None
                pos_hint_y: None
                pos: button.pos
        Button:
            id: button2
            size_hint: None, None
            pos_hint: {"center_x": .5, "center_y": .5}
            background_normal: ""
            on_release: root.restart_button()
            Image:
                source: "app_images/restart.png"
                pos_hint: None, None
                pos: button2.pos